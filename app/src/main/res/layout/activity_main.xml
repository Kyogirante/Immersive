<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/status_bar_hide"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="status_bar_hide"/>


  <TextView
    android:id="@+id/status_bar_font_color"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="status_bar_font_color"/>


  <TextView
    android:id="@+id/full_immersive"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="full_immersive"/>


  <TextView
    android:id="@+id/status_bar_color"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="status_bar_color"/>

  <TextView
    android:id="@+id/navigation_bar_color"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="navigation_bar_color"/>

  <TextView
    android:id="@+id/navigation_bar_icon_color"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="navigation_bar_icon_color"/>
</LinearLayout>